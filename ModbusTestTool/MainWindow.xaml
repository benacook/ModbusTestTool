<Window x:Class="ModbusTestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Modbus TCP Test Tool" Height="450" Width="728.2">
    <Grid Background="#FF171C34">
        <Grid.RowDefinitions>
            <RowDefinition Height="105*" />
            <RowDefinition Height="106*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*" />
            <ColumnDefinition Width="191*" />
        </Grid.ColumnDefinitions>
        <Label Content="Register" HorizontalAlignment="Left" Margin="334,64,0,0" VerticalAlignment="Top" Foreground="White" Grid.ColumnSpan="2" />
        <Label Content="1" HorizontalAlignment="Left" Margin="82,162,0,0" VerticalAlignment="Top" Foreground="White" Width="18" />
        <Label Content="Function" HorizontalAlignment="Left" Margin="151,27,0,0" VerticalAlignment="Top" Foreground="White" Width="69" Grid.Column="1" />
        <TextBox x:Name="Value1" HorizontalAlignment="Left" Height="23" Margin="102,162,0,0" TextWrapping="Wrap" Text="{Binding RegisterValues[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="56" Background="#7FBABABA" Foreground="White" />
        <TextBox x:Name="Function" Text="{Binding FunctionCode, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="221,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59" Background="#7FBABABA" Foreground="White" Grid.Column="1" />
        <Label Content="Response" HorizontalAlignment="Left" Margin="76,162.4,0,0" VerticalAlignment="Top" Foreground="White" Grid.Row="1" Width="64" />
        <TextBox x:Name="Response" HorizontalAlignment="Left" Height="23" Margin="145,162.4,0,0" TextWrapping="Wrap" Text="{Binding Response}" VerticalAlignment="Top" Width="495" Background="#7FBABABA" Grid.ColumnSpan="2" Grid.Row="1" />
        <Button x:Name="SendBtn" Command="{Binding Write}" Content="Write" HorizontalAlignment="Left" Margin="242,88.4,0,0" VerticalAlignment="Top" Width="75" Background="#FF767676" BorderBrush="{x:Null}" Foreground="White" Grid.Row="1" />
        <Label Content="Ip Adddress" HorizontalAlignment="Left" Margin="82,24,0,0" VerticalAlignment="Top" Foreground="White" />
        <TextBox x:Name="IpAddr" Text="{Binding IpAddr, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="160,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#7FBABABA" Foreground="White" />
        <CheckBox x:Name="RunCyc" Content="Write Cyclically" HorizontalAlignment="Left" Margin="242,129.4,0,0" Grid.Row="1" VerticalAlignment="Top" Width="105" Foreground="White" />
        <Button x:Name="SendBtn_Copy" Command="{Binding Read}" Content="Read" HorizontalAlignment="Left" Margin="42,88.4,0,0" VerticalAlignment="Top" Width="75" Background="#FF767676" BorderBrush="{x:Null}" Foreground="White" Grid.Row="1" Grid.Column="1" />
        <CheckBox x:Name="RunCyc_Copy" Content="Read Cyclically" HorizontalAlignment="Left" Margin="42,129.4,0,0" Grid.Row="1" VerticalAlignment="Top" Width="105" Foreground="White" Grid.Column="1" />
        <Label Content="Values" HorizontalAlignment="Left" Margin="338,123,0,0" VerticalAlignment="Top" Foreground="White" Grid.ColumnSpan="2" />
        <TextBox x:Name="Value2" HorizontalAlignment="Left" Height="23" Margin="221,162,0,0" TextWrapping="Wrap" Text="{Binding RegisterValues[1], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="56" Background="#7FBABABA" Foreground="White" />
        <Label Content="2" HorizontalAlignment="Left" Margin="202,162,0,0" VerticalAlignment="Top" Foreground="White" Width="18" />
        <Label Content="3" HorizontalAlignment="Left" Margin="321,162,0,0" VerticalAlignment="Top" Foreground="White" Width="18" />
