        <TextBox x:Name="Value4" HorizontalAlignment="Left" Height="23" Margin="104,162,0,0" TextWrapping="Wrap" Text="{Binding RegisterValues[3], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="56" Background="#7FBABABA" Foreground="White" Grid.Column="1" />
        <Label Content="4" HorizontalAlignment="Left" Margin="85,162,0,0" VerticalAlignment="Top" Foreground="White" Width="18" Grid.Column="1" />
        <Label Content="Start" HorizontalAlignment="Left" Margin="233,89,0,0" VerticalAlignment="Top" Foreground="White" Width="38" />
        <TextBox x:Name="StartAddr" HorizontalAlignment="Left" Height="23" Margin="273,90,0,0" TextWrapping="Wrap" Text="{Binding StartReg, Mode=TwoWay}" VerticalAlignment="Top" Width="56" Background="#7FBABABA" Foreground="White" />
        <TextBox x:Name="AddrQuantity" HorizontalAlignment="Left" Height="23" Margin="72,90,0,0" TextWrapping="Wrap" Text="{Binding RegQty, Mode=TwoWay}" VerticalAlignment="Top" Width="56" Background="#7FBABABA" Foreground="White" Grid.Column="1" />
